<%= turbo_frame_tag @answer do %>
  <%= form_with model: [@question, @answer] do |f| %>
    <%= render "layouts/shared/errors", object: @answer %>
    <div class="mb-3 row">
      <div class="col-sm-2 col-form-label">
        <%= f.label :body %>
      </div>

      <div class="col-sm-10">
        <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>

    <%= f.submit t('buttons.submitAnswer'), class: 'btn btn-primary' %>
  <% end %>
<% end %>